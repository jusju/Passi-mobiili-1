<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pisteet"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profiili_pohja_grey"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tyokykypassiin_pohja"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/etenemispalkkiv2_pohja_grey"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        android:layout_marginBottom="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imageView5" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="EDISTYMINEN"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:id="@+id/textView4"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imageView5" />

    <Button
        android:id="@+id/btnProfiiliNappi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nappi_grey"
        android:text="PROFIILI"
        android:textColor="#a6a6a6"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="@+id/imageView9"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btnTyokykypassi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nappi"
        android:text="TYÖKYKYPASSI"
        android:textColor="#3498db"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp" />


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/valinekauppa_pohja_grey"

        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nappi_grey"
        android:text="VÄLINEKAUPPA"
        android:textColor="#a6a6a6"
        android:id="@+id/button"
        app:layout_constraintRight_toRightOf="@+id/imageView11"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:layout_marginTop="6dp" />

</android.support.constraint.ConstraintLayout>


