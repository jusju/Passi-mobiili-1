<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/topProgressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pisteet" />

        <TextView
            android:id="@+id/topProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="8pt"
            android:paddingLeft="30dp"
            android:textColor="#3498db"
            android:text=""/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profiili_pohja"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/topProgressContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tyokykypassiin_pohja"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/bottomProgressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/etenemispalkkiv2_pohja"
            android:id="@+id/bottomProgressBackground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="26dp"
            android:paddingLeft="12dp"
            android:layout_height="93px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:id="@+id/bottomProgressFill"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottomProgressPercentage"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            />

        </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="EDISTYMINEN"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:id="@+id/textView4"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/bottomProgressContainer" />

    <Button
        android:id="@+id/btnProfiiliNappi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nappi"
        android:text="PROFIILI"
        android:textColor="#3498db"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="@+id/imageView9"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/btnTyokykypassi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nappi"
        android:text="TYÖKYKYPASSI"
        android:textColor="#3498db"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        android:layout_marginTop="6dp"
        app:layout_constraintRight_toRightOf="@+id/imageView10"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp" />


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/valinekauppa_pohja_grey"

        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nappi_grey"
        android:text="VÄLINEKAUPPA"
        android:textColor="#a6a6a6"
        android:id="@+id/button"
        app:layout_constraintRight_toRightOf="@+id/imageView11"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        android:layout_marginTop="6dp" />

</android.support.constraint.ConstraintLayout>


