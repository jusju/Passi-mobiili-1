<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background"
    >


    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar">
    </include>
    <TextView
        android:text="EDISTYMINEN"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_marginTop="528dp"
        android:layout_below="@id/toolbar"
        />

    <ImageView

        android:background="@drawable/pisteet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="260dp"
        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dip"
        android:src="@drawable/profiili_pohja"
        />


    <Button
        android:id="@+id/btnProfiili"
        android:layout_marginTop="160dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="100dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3498db"
        android:text="Profiili"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/nappi"

        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dip"
        android:src="@drawable/tyokykypassiin_pohja"
        />

    <Button
        android:id="@+id/btnTyokykypassi"
        android:layout_marginTop="270dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Työkykypassiin"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:background="@drawable/nappi"
        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginTop="230dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dip"
        android:src="@drawable/valinekauppa_pohja"
        />

    <Button
        android:id="@+id/btnKauppa"
        android:layout_marginTop="380dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Välinekauppa"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:background="@drawable/nappi" />

    <ImageView
        android:layout_width="345dp"
        android:layout_height="200dp"
        android:layout_marginTop="320dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dip"
        android:src="@drawable/etenemispalkkiv2_pohja"

        />

    <ImageView
        android:layout_width="290dp"
        android:layout_height="200dp"
        android:layout_marginTop="318dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_gravity="center"
        android:layout_marginBottom="100dip"
        android:src="@drawable/etenemispalkkiv2_varipalkki"
        />

</FrameLayout>


