<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="61dp"
        tools:layout_editor_absoluteX="70dp"
        android:id="@+id/button_palauttamatta"
        android:background="@drawable/odottaa_palautetta_pohja" />

    <TextView
        android:text="tehtavakortti_nimi"
        android:layout_width="215dp"
        android:layout_height="25dp"
        android:id="@+id/palauttamatta_nimi"
        app:layout_constraintLeft_toLeftOf="@+id/button_palauttamatta"
        app:layout_constraintTop_toTopOf="@+id/button_palauttamatta"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:textAlignment="center"/>

    <TextView
        android:text="kuinka monta palautettu"
        android:layout_width="178dp"
        android:layout_height="20dp"
        android:id="@+id/palauttamatta_maara"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/palauttamatta_nimi"
        app:layout_constraintLeft_toLeftOf="@+id/button_palauttamatta"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:maxLines="1"
        android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>