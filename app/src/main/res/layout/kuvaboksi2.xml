<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/palaute_vihrea"
        tools:layout_editor_absoluteY="129dp"
        tools:layout_editor_absoluteX="117dp"
        android:id="@+id/imageView" />

    <TextView
        android:text="Hieno kommentti esimerkki pidempi versio jotta tämä olisi liian pitkä sinulle android "
        android:layout_width="158dp"
        android:id="@+id/opettaja_kommentti"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tehtavakortti_nimi"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="34dp" />

    <TextView
        android:text="Tehtavakortti example"
        android:layout_width="215dp"
        android:layout_height="28dp"
        android:id="@+id/tehtavakortti_nimi"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>