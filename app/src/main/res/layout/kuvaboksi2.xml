<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/palaute_kuva_laatikko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/palaute_vihrea" />

    <ImageView
        android:id="@+id/tahti_arvio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/tahti_hopea"
        app:layout_constraintLeft_toLeftOf="@+id/palaute_kuva_laatikko"
        app:layout_constraintTop_toBottomOf="@+id/tehtavakortti_nimi" />

    <TextView
        android:id="@+id/opettaja_kommentti"
        android:layout_width="158dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="Hieno kommentti esimerkki pidempi versio jotta tämä olisi liian pitkä sinulle android "
        app:layout_constraintRight_toRightOf="@+id/palaute_kuva_laatikko"
        app:layout_constraintTop_toBottomOf="@+id/tehtavakortti_nimi" />

    <TextView
        android:id="@+id/tehtavakortti_nimi"
        android:layout_width="215dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:text="Tehtavakortti example"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintRight_toRightOf="@+id/palaute_kuva_laatikko"
        app:layout_constraintTop_toTopOf="@+id/palaute_kuva_laatikko" />
</android.support.constraint.ConstraintLayout>
