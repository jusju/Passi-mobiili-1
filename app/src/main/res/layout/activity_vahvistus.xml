<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vahvistus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.softala.passi.VahvistusActivity"
    android:background="@drawable/background_and_title">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar">
    </include>

    <ImageView
        android:id="@+id/tehtavaPalautettu"
        android:src="@drawable/tehtava_palautettu_pohja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="TEHTÄVÄ PALAUTETTU ONNISTUNEESTI!"
        android:textSize="23sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#3498db"
        />

    <Button
        android:id="@+id/btnPalaaKortteihin"
        android:layout_marginTop="280dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="100dp"
        android:padding="5dp"
        android:elevation="5dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="#3498db"
        android:text="Palaa kortteihin"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/no_shadow_nappi"
        />

    <Button
        android:id="@+id/btnTakaisinEtusivulle"
        android:layout_marginTop="360dp"
        android:layout_marginStart="260dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="100dp"
        android:padding="5dp"
        android:elevation="5dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="#3498db"
        android:text="Takaisin etusivulle"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/no_shadow_nappi"
        />

    <ImageView
        android:id="@+id/combo"
        android:background="@drawable/combo_hahmo_ei_alavarjoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="90dp"
        android:layout_alignTop="@+id/btnTakaisinEtusivulle" />


</RelativeLayout>


