<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="Turvallinen nostaminen">

    <TextView android:text="Minkä neuvon antaisit tälle kaverille? Nivelet paukkuu ääriasennoissa, miksi?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:src="@drawable/nosto"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jos ei voimat riitä nosta kaksin käsin"
        android:id="@+id/btKaksinKasin"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nosta jaloilla"
        android:id="@+id/btJaloilla"
        android:layout_below="@+id/btKaksinKasin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seuraava"
        android:id="@+id/btSeuraava"
        android:layout_below="@+id/btJaloilla"
        android:layout_centerHorizontal="true" />
    android:layout_marginTop="102dp" />

</RelativeLayout>
