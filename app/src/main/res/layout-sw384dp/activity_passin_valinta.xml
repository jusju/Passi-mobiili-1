<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background"
    >

    <include
        layout="@layout/tool_bar"
        android:id="@+id/toolbar"
        >

    </include>


    <TextView
        android:background="@drawable/otsikkopalkki"
        android:text="TYÖKYKYPASSI"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:layout_height="50dp"
        android:layout_width="308dp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal|top" />



    <Button
        android:id="@+id/btnTyokykyvalmiudet"
        android:layout_marginTop="138dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="-8dp"
        android:layout_marginEnd="-6dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#3498db"
        android:text="AMMATIN TYÖKYKYVALMIUDET"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/ammatin_tyokykyvalmiudet_small"

        />


    <Button
        android:id="@+id/btnEdistavaLiikunta"
        android:layout_marginTop="220dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="-8dp"
        android:layout_marginEnd="-6dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TYÖKYKYÄ EDISTÄVÄ LIIKUNTA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:background="@drawable/tyokykya_edistava_liikunta_small"
        />


    <Button
        android:id="@+id/btnTerveysosaaminen"
        android:layout_marginTop="302dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="-8dp"
        android:layout_marginEnd="-6dp"
        android:padding="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TERVEYSOSAAMINEN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:background="@drawable/terveysosaaminen_small" />


    <Button
        android:id="@+id/btnHarrastuneisuus"
        android:layout_marginTop="388dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="-8dp"
        android:layout_marginEnd="-6dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARRASTUNEISUUS JA YHTEISTYÖTAIDOT"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:background="@drawable/harrastuneisuus_ja_yhetietyotaidot_small" />


    <Button
        android:id="@+id/btnVahvistaminen"
        android:layout_marginTop="473dp"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="-8dp"
        android:layout_marginEnd="-8dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TYÖKYKYVALMIUKSIEN VAHVISTAMINEN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#3498db"
        android:background="@drawable/tyokykyvalmiuksien_vahvistaminen_small" />

    <ImageView

        android:background="@drawable/tahtipalkki"
        android:layout_height="402dp"
        android:layout_width="71dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="30dp"
        />



</FrameLayout>

